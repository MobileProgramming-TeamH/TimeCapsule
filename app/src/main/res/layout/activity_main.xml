<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#46606D">

    <Button
        android:id="@+id/manual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape1"
        android:layout_marginTop="10dp"
        android:text="\?"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/month"
        android:fontFamily="@font/ablb"
        android:textSize="30sp"
        android:layout_above="@id/calendarView"
        android:layout_centerHorizontal="true"
        android:textColor="#f2f2f2"/>


    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:focusedMonthDateColor="#3ffa7f"
        android:unfocusedMonthDateColor="#f2f2f2"/>

    <Button
        android:id="@+id/goToQuestionBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/today_question"
        android:fontFamily="@font/ablb"
        android:textColor="#46606D"
        android:textAllCaps="false"
        android:background="@drawable/shape"
        android:layout_below="@id/calendarView"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"/>

    <Button
        android:id="@+id/goToDiaryBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/diary"
        android:fontFamily="@font/ablb"
        android:textColor="#46606D"
        android:textAllCaps="false"
        android:background="@drawable/shape"
        android:layout_below="@id/goToQuestionBtn"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"/>
    <Button
        android:id="@+id/goToDiaryAnswerBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/diary_answer"
        android:fontFamily="@font/ablb"
        android:textColor="#46606D"
        android:textAllCaps="false"
        android:background="@drawable/shape"
        android:layout_below="@id/goToDiaryBtn"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"/>

</RelativeLayout>